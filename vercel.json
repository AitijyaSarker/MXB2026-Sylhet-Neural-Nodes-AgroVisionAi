{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend"
    }
  ],
  "env": {
    "MONGO_URI": "@mongodb_uri",
    "FRONTEND_URL": "@frontend_url",
    "NODE_ENV": "production"
  }
}
